		"test:types": "tsc",
		"test:unit": "mocha *.test.js"
	},
	"keywords": [
		"esm",
		"loader",
		"esm-loader"
	],
	"author": {
		"name": "Andrew Duthie",
		"email": "andrew@andrewduthie.com",
		"url": "https://andrewduthie.com"
	},
	"repository": {
