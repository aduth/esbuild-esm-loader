		"url": "https://github.com/aduth/esbuild-esm-loader.git"
	},
	"files": [
		"hooks.js"
	],
	"peerDependencies": {
		"esbuild": "*"
	},
	"devDependencies": {
		"@aduth/eslint-config": "^4.4.1",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.16",
		"chai": "^5.0.3",
		"esbuild": "^0.20.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"mocha": "^10.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.5",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"resolve-file-extension": "^1.0.1"
	}
