{
	"name": "esbuild-esm-loader",
	"type": "module",
	"version": "0.3.0",
	"description": "ESM loader to transform imports using ESBuild",
	"license": "MIT",
	"engines": {
		"node": ">=16.17.0"
	},
	"exports": {
		".": "./hooks.js"
	},
